<% include ../partials/header %>

<div class="ui main container">

  <div class="ui huge header">
    <h1>Add a new chapter summary to <%= book.title %></h1>
  </div>

  <form class="ui form" action="/books/<%= book._id %>/chapters" method="POST">
    <div class="field">
      <label for="number">Chapter Number:</label>
      <input type="number" name="number" min="1" step="1" value="<%= book.chapters.filter((chapter) => chapter.author.id.equals(currentUser._id)).length + 1 %>">
    </div>
    <div class="field">
      <label for="title">Title:</label>
      <input type="text" name="title" placeholder="Title">
    </div>
    <div class="field">
      <label for="summary">Your Summary:</label>
      <textarea name="summary" placeholder="Summary of this chapter"></textarea>
    </div>
    <button class="ui button">Submit!</button>
  </form>

</div>

<% include ../partials/footer %>
