<% include ../partials/header %>

<div class="ui main container">

  <div class="ui message">
    <p>Below you will find all the pending requests for book additions. To add a book to the database, simply click the "Add to database" button, where you will be prompted to edit the book's information. If a request does not look legitimate, click the "Delete" button to remove it.</p>
  </div>

  <div class="ui four centered cards">
    <% requests.forEach(function(request) { %>
      <div class="card">
        <div class="content">
          <div class="ui huge header">
            <%= request.title %>
          </div>
          <div class="meta">
            By <%= request.author %>
          </div>
        </div>
        <form class="extra content" action="/books/request/<%= request._id %>?_method=DELETE" method="POST">
          <div class="ui two buttons">
            <a href="/books/new/<%= request._id %>" class="ui basic green button">Add to database</a>
            <input type="submit" class="ui basic red button delete-btn" value="Delete">
          </div>
        </form>
      </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
