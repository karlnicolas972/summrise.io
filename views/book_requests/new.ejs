<% include ../partials/header %>

<div class="ui main text container segment">

  <div class="ui huge header">
    <h1>Request a new book</h1>
  </div>

  <form class="ui form" action="/books/request" method="POST">
    <div class="field">
      <label for="title">Title:</label>
      <input type="text" name="title" placeholder="Title">
    </div>
    <div class="field">
      <label for="author">Author:</label>
      <input type="text" name="author" placeholder="Author">
    </div>
    <div class="field">
      <label for="genres">Genres:</label>
      <select class="ui fluid search dropdown" name="genres" multiple>
        <option value="">Suggest possible genres for this book</option>
        <% genres.forEach(function(genre) { %>
          <option value="<%= genre._id %>"><%= genre.name %></option>
        <% }); %>
      </select>
    </div>
    <button class="ui button">Request this book!</button>
  </form>

</div>

<% include ../partials/footer %>
