<% include ../partials/header %>

<div class="ui main text container segment">

  <div class="ui huge header">
    <h1>Add a new genre</h1>
  </div>

  <form class="ui form" action="/books/genres/new" method="POST">
    <div class="field">
      <label for="genre[name]">Name</label>
      <input type="text" name="genre[name]" placeholder="Name of the genre">
    </div>

    <div class="field">
      <label for="genre[books]">Add books:</label>
      <select class="ui fluid dropdown" name="genre[books]" multiple>
        <option value="">Add books within this genre</option>
        <% books.forEach(function(book) { %>
          <option value="<%= book._id %>"><%= book.title %></option>
        <% }); %>
      </select>

    </div>
    <button class="ui button">Submit!</button>
  </form>

</div>

<% include ../partials/footer %>
