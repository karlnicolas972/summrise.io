<% include ../partials/header %>

<div class="ui main text container segment">
  <h1>Edit the <%= genre.name %> Genre</h1>

  <div class="ui message">
    <p>To add or remove a genre from a book, please go to that book's edit page.</p>
  </div>

  <form class="ui form" action="/books/genres/<%= genre._id %>?_method=PUT" method="POST">
    <div class="field">
      <label for="genre[name]">Name:</label>
      <input type="text" name="genre[name]" value="<%= genre.name %>">
    </div>
    <button class="ui button">Submit!</button>
  </form>
</div>

<% include ../partials/footer %>
