<% include ../partials/header %>

<div class="ui main container">

  <div class="ui message">
    <div class="ui huge header">
      <h1>Browse Our Books</h1>
    </div>
    <% if (currentUser && currentUser.isAdmin) { %>
      <p>Here is the collection of books in our database. To view (and approve or delete) requests submitted by our users, click the "Requests" button below.</p>
      <div class="ui small buttons">
        <a href="/books/new" class="ui blue button"><i class="plus icon"></i>Book</a>
        <a href="/books/genres/new" class="ui green button"><i class="plus icon"></i>Genre</a>
        <a href="/books/request/all" class="ui teal button">Requests</a>
      </div>
    <% } else { %>
      <p>Here is the collection of books in our database. Want to write a chapter summary for a book that isn't here? Request a new book using the link below.</p>
      <a href="/books/request" class="ui blue button">Request a new book!</a>
    <% } %>
  </div>

  <% if (numPages > 1) { %>
    <div class="ui small pagination menu">
      <div class="item ui dropdown">
        <div class="text">Sort by</div><i class="dropdown icon"></i>
        <div class="menu">
          <a href="/books/page/<%= currentPage %>/sort/author" class="item">Author</a>
          <a href="/books/page/<%= currentPage %>/sort/title" class="item">Title</a>
          <a href="/books/page/<%= currentPage %>/sort/-views" class="item">Most Viewed</a>
        </div>
      </div>
      <div class="item ui dropdown">
        <div class="text">Genres</div><i class="dropdown icon"></i>
        <div class="menu">
          <% genres.forEach(function(genre) { %>
            <a href="/books/genres/<%= genre._id %>/page/1/sort/title" class="item"><%= genre.name %></a>
          <% }); %>
        </div>
      </div>
      <span class="item">Page: </span>
      <% for (var i = 1; i <= numPages; i++) { %>
        <% if (currentPage == i) { %>
          <a href="/books/page/<%= i %>/sort/<%= sort_by %>" class="active item"><%= i %></a>
        <% } else { %>
          <a href="/books/page/<%= i %>/sort/<%= sort_by %>" class="item"><%= i %></a>
        <% } %>
      <% } %>
    </div>

    <br>
  <% } %>

  <br>

  <div class="ui doubling stackable four cards">
    <% books.forEach(function(book) { %>
      <div class="card">
        <div class="content">
          <a href="/books/<%= book._id %>" class="header">
            <%= book.title %>
          </a>
          <div class="meta">
            By <%= book.author %>
          </div>
          <% if (book.description) { %>
            <div class="description">
              <% if (book.description.length > 200) { %>
                <%- book.description.substring(0, 200) %>...
              <% } else { %>
                <%- book.description %>
              <% } %>
            </div>
          <% } %>
        </div>

        <% if (currentUser && currentUser.isAdmin) { %>
          <form class="extra content" action="/books/<%= book._id %>?_method=DELETE" method="POST">
            <div class="ui three buttons">
              <a href="/books/<%= book._id %>/edit" class="ui blue basic button">Edit</a>
              <a href="/books/<%= book._id %>" class="ui basic teal button">View</a>
              <input type="submit" class="ui red basic button delete-btn" value="Delete">
            </div>
          </form>
        <% } else { %>
          <div class="extra content">
            <a class="ui fluid teal button" href="/books/<%= book._id %>">View chapters</a>
          </div>
        <% } %>
      </div>
    <% }); %>
  </div>

  <% if (numPages > 1) { %>
    <br>
    <div class="ui small pagination menu">
      <div class="item ui dropdown">
        <div class="text">Sort by</div><i class="dropdown icon"></i>
        <div class="menu">
          <a href="/books/page/<%= currentPage %>/sort/author" class="item">Author</a>
          <a href="/books/page/<%= currentPage %>/sort/title" class="item">Title</a>
          <a href="/books/page/<%= currentPage %>/sort/-views" class="item">Most Viewed</a>
        </div>
      </div>
      <span class="item">Page: </span>
      <% for (var i = 1; i <= numPages; i++) { %>
        <% if (currentPage == i) { %>
          <a href="/books/page/<%= i %>/sort/<%= sort_by %>" class="active item"><%= i %></a>
        <% } else { %>
          <a href="/books/page/<%= i %>/sort/<%= sort_by %>" class="item"><%= i %></a>
        <% } %>
      <% } %>
    </div>
  <% } %>

</div>

<% include ../partials/footer %>
