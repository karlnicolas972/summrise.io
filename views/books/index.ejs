<% include ../partials/header %>

<div class="ui main container">

  <div class="ui message">
    <div class="ui huge header">
      <h1>Available Books</h1>
    </div>
    <p>Here is the collection of books in our database. Want to write a chapter summary for a book that isn't here? Request a new book using the link below.</p>
    <a href="/books/request" class="ui green button">Request a new book!</a>
    <% if (currentUser && currentUser.isAdmin) { %>
      <a href="/books/request/all" class="ui blue button">View pending requests</a>
    <% } %>
  </div>

  <br>

  <div class="ui centered grid">
    <% books.forEach(function(book) { %>
    <div class="thirteen wide mobile eight wide tablet four wide computer column">
      <div class="ui card">
        <a href="/books/<%= book._id %>" class="image">
          <img src="<%= book.coverImage %>" alt="<%= book.title %>">
        </a>
        <div class="content">
          <a href="/books/<%= book._id %>" class="header">
            <%= book.title %>
          </a>
          <div class="meta">
            By <%= book.author %>
          </div>
          <% if (book.description) { %>
            <div class="description">
              <% if (book.description.length > 200) { %>
                <%- book.description.substring(0, 200) %>...
              <% } else { %>
                <%- book.description %>
              <% } %>
            </div>
          <% } %>
        </div>
        <% if (currentUser && currentUser.isAdmin) { %>
          <form class="extra content" action="/books/<%= book._id %>?_method=DELETE" method="POST">
            <div class="ui two buttons">
              <a href="/books/<%= book._id %>/edit" class="ui blue basic button">Edit</a>
              <input type="submit" onclick="alertSure()" class="ui red basic button delete-btn" value="Delete">
            </div>
          </form>
        <% } %>
      </div>
    </div>
    <% }); %>
  </div>

</div>

<% include ../partials/footer %>
