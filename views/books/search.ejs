<% include ../partials/header %>

<div class="ui main container">

  <div class="ui large message">
    <% if (searchTerm) { %>
      <h1>Book search results for "<%= searchTerm %>":</h1>
      <p>Didn't find what you were looking for?</p>
    <% } %>
    <form class="ui fluid action icon input" action="/books/search" method="POST">
      <input type="text" name="searchTerm" placeholder="<%= (searchTerm) ? 'Try again...' : 'Search for a book...' %>">
      <button class="ui icon button"><i class="search icon"></i></button>
    </form>
  </div>

  <br>

  <% if (searchTerm && books && books.length === 0) { %>
    <p>No results found. Please recheck your query and try again. If the book you are looking for isn't found, <a href="/books/request">request it here</a> and it will be added to our database shortly.</p>
  <% } %>

  <div class="ui doubling stackable four cards">
    <% books.forEach(function(book) { %>
      <div class="card">
        <div class="content">
          <a href="/books/<%= book._id %>" class="header">
            <%= book.title %>
          </a>
          <div class="meta">
            By <%= book.author %>
          </div>
          <% if (book.description) { %>
            <div class="description">
              <% if (book.description.length > 200) { %>
                <%- book.description.substring(0, 200) %>...
              <% } else { %>
                <%- book.description %>
              <% } %>
            </div>
          <% } %>
        </div>

        <% if (currentUser && currentUser.isAdmin) { %>
          <form class="extra content" action="/books/<%= book._id %>?_method=DELETE" method="POST">
            <div class="ui three buttons">
              <a href="/books/<%= book._id %>/edit" class="ui blue basic button">Edit</a>
              <a href="/books/<%= book._id %>" class="ui basic teal button">View</a>
              <input type="submit" class="ui red basic button delete-btn" value="Delete">
            </div>
          </form>
        <% } else { %>
          <div class="extra content">
            <a class="ui fluid teal button" href="/books/<%= book._id %>">View chapters</a>
          </div>
        <% } %>
      </div>
    <% }); %>
  </div>

</div>

<% include ../partials/footer %>
