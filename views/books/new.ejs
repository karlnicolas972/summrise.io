<% include ../partials/header %>

<div class="ui main container">

  <div class="ui huge header">
    <h1>Add a new book</h1>
  </div>

  <form class="ui form" action="/books/new/<%= request._id %>" method="POST">
    <div class="field">
      <label for="title">Title:</label>
      <input type="text" name="title" value="<%= request.title %>">
    </div>
    <div class="field">
      <label for="author">Author:</label>
      <input type="text" name="author" value="<%= request.author %>">
    </div>
    <div class="field">
      <label for="coverImage">Cover Image:</label>
      <input type="text" name="coverImage" placeholder="Cover Image URL">
    </div>
    <div class="field">
      <label for="description">Description:</label>
      <textarea name="description" placeholder="Short description of the book"></textarea>
    </div>
    <button class="ui button">Submit!</button>
  </form>

</div>



<% include ../partials/footer %>
