<% include ../partials/header %>

<div class="ui main container">
  <div class="ui huge header">
    <h1>Edit <%= book.title %></h1>
  </div>

  <form class="ui form" action="/books/<%= book._id %>?_method=PUT" method="POST">
    <div class="field">
      <label for="title">Title:</label>
      <input type="text" name="book[title]" value="<%= book.title %>">
    </div>
    <div class="field">
      <label for="author">Author:</label>
      <input type="text" name="book[author]" value="<%= book.author %>">
    </div>
    <div class="field">
      <label for="coverImage">Cover Image:</label>
      <input type="text" name="book[coverImage]" value="<%= book.coverImage %>">
    </div>
    <div class="field">
      <label for="description">Description:</label>
      <textarea name="book[description]"><%= book.description %></textarea>
    </div>
    <button class="ui button">Submit!</button>
  </form>
</div>

<% include ../partials/footer %>
